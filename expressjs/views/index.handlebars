<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-header">
                <div class="card-title">
                    <h1>{{title}}</h1>
                </div>
            </div>
            <div class="card-body">
                <form action="/api/members" method="post">
                    <input type="text" class="form-control mb-2" name="name" placeholder="Name">
                    <input type="email" class="form-control mb-2" name="email" placeholder="Email">
                    <input type="submit" value="Add member" class="btn btn-primary w-100">
                </form>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    {{#each members}}
                    <li class="list-group-item">{{this.name}}: {{this.email}}</li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>